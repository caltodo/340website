<!--  need to change the action later -->

<form method = "POST" action="/Players">
	<fieldset>
		<legend>Name</legend>
		<p>First Name: <input type = "text" name = "FirstName"/> </p>
		<p>Last Name: <input type = "text" name = "LastName"/> </p>
		<p><input type = "submit" ></p>
	</fieldset>

	<fieldset>
		<legend>Vitals</legend>
		<p>Height: <input type = "text" name = "Height"/> </p>
		<p>Weight: <input type = "text" name = "Weight"/> </p>
		<p>Age: <input type = "text" name = "Age"/> </p>
		<p>Team Name: <input type = "text" name = "TeamName"/> </p>
		<p>Primary Position: <input type = "text" name = "PrimaryPosition"/> </p>
		<p>Secondary Position: <input type = "text" name = "SecondaryPosition"/> </p>
		<p><input type = "submit" ></p>

	</fieldset>
</form>

<h3>Current Players:</h3>
<table>
	<thead> 
		<th>First Name</th> 
		<th>Last Name</th> 
		<th>Age</th>
		<th>Height</th>  
		<th>Weight</th>  
		<th>TeamName</th>  
		<th>PrimaryPosition</th>  
		<th>SecondaryPosition</th>  
	</thead> 
	<tbody> 
		{{#each Players}} 
		<tr> 
			<td>{{FirstName}}</td> 
			<td>{{LastName}}</td> 
			<td>{{Age}}</td> 
			<td>{{Height}}</td>
			<td>{{Weight}}</td>
			<td>{{TeamName}}</td>
			<td>{{PrimaryPosition}}</td>
			<td>{{SecondaryPosition}}</td>
			<td><button onclick="deletePlayer({{id}})">Delete</button></td>
			<td><a href="/Players/{{id}}">Update</a></td>
		</tr> 
		{{/each}} 
	</tbody> 
</table> 


</html>
